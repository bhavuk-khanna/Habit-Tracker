<html>
    <head>
        <title>Habit Tracker</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="CSS/style.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Habit Tracker</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="http://localhost:8000/7-days">Weekly view <span class="sr-only">(current)</span></a>
                </li>
              </ul> 
            </div>

            
          </nav>
          <main>
            <div class="card" id="habit-cntnr">
                <div class="card-header">
                  Habits
                </div>
                <ul class="list-group list-group-flush">
                  <% if(habitList.length===0) {%>
                    Uh Oh!<br> You have no Habits, Try adding one.
                  <%}%>
                  
                    <% for(let i of habitList) {%>
                        <li class="list-group-item">
                            <%=i.name%>
                            <footer class="blockquote-footer">Completed: <cite title="Source Title"><%=i.completed%>/<%=i.days.length%></cite></footer>
                            <footer class="blockquote-footer">Longest Streak: <cite title="Source Title"><%= i.streak%></cite></footer>
                            
                        </li>
                    <%}%>
                  
                </ul>
              </div>

            <div class="card" id="add-habit-cntnr">
                <div class="card-header">
                  Let's Start a new Habit
                </div>
                <div class="card-body">
                  <blockquote class="blockquote mb-0">
                    <form action="/add-habit" method=post>
                        <div class="form-group">
                          <label for="habitname">Habit Name</label>
                          <input type="text" class="form-control" id="habitname" name="name"  required>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Add Habit</button>
                      </form>
                  </blockquote>
                </div>
            </div>
              
          </main>
    </body>
</html>